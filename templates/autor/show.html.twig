{% extends 'base.html.twig' %}

{% block title %}Autor{% endblock %}

{% block body %}
    <h1>Autor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ autor.id }}</td>
            </tr>
            <tr>
                <th>Jméno</th>
                <td>{{ autor.jmeno }}</td>
            </tr>
            <tr>
                <th>Příjmení</th>
                <td>{{ autor.prijmeni }}</td>
            </tr>
            <tr>
                <th>Rok narození</th>
                <td>{{ autor.rokNarozeni }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_autor_index') }}" class= "btn btn-primary">Zpět</a>

    <a href="{{ path('app_autor_edit', {'id': autor.id}) }}" class= "btn btn-info" text>Upravit</a>
    <div class="col text-end">
    {{ include('autor/_delete_form.html.twig') }}
    </div>
{% endblock %}
